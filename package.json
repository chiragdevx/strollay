{
  "name": "tsc-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8080",
    "build": "next build",
    "start": "next start -p 8080",
    "prepare": "husky",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:fix": "eslint . --ext .ts --fix",
    "precommit": "lint-staged",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,mdx,css,yaml,yml}\""
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:fix",
      "prettier --write",
      "npm run format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1",
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.3",
    "@reduxjs/toolkit": "^2.2.2",
    "axios": "^1.6.8",
    "next": "14.1.4",
    "react": "^18",
    "react-dom": "^18",
    "react-helmet": "^6.1.0",
    "react-lazy-load-image-component": "^1.6.0",
    "react-modal": "^3.16.1",
    "react-redux": "^9.1.0",
    "react-slick": "^0.30.2",
    "react-tabs": "^6.0.2",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.3.0",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-lazy-load-image-component": "^1.6.3",
    "@types/react-modal": "^3.16.3",
    "@types/react-slick": "^0.23.13",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "sass": "^1.72.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
